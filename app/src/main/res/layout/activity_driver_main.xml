<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/driver_activity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DriverMain">

    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="76dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="39dp"
        android:text="Open with Google Maps "
        android:textSize="20dp"
        android:textStyle="bold"
        android:background="@color/green"
        android:textColor="@color/white" />

    <LinearLayout
        android:layout_width="373dp"
        android:layout_height="315dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="11dp"
        android:layout_marginTop="50dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="66dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/cutomer_text"
                android:layout_width="113dp"
                android:layout_height="match_parent"
                android:text="Customer location"
                android:textSize="18dp"
                />

            <EditText
                android:id="@+id/customer_location_input"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="textPersonName" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="66dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/resturant_text"
                android:layout_width="113dp"
                android:layout_height="match_parent"
                android:text="Resturant location"
                android:textSize="18dp" />

            <EditText
                android:id="@+id/resturant_location_input"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="textPersonName" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="136dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/order_text"
                android:layout_width="109dp"
                android:layout_height="102dp"
                android:gravity="center"
                android:text="Order Details"
                android:textSize="25dp"
                android:background="@color/white"/>

            <EditText
                android:id="@+id/order_number_input"
                android:layout_width="wrap_content"
                android:layout_height="116dp"
                android:layout_weight="1"
                android:inputType="textPersonName"
                android:text="#1396"
                android:textSize="30dp" />
        </LinearLayout>


    </LinearLayout>


</RelativeLayout>